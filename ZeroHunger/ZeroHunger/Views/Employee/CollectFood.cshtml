
@{
    ViewBag.Title = "CollectFood";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}

<h2>Collect Food</h2>
<table class="table table-bordered">
    <tr>
        <th>Resturant Name</th>
        <th>Resturant Address</th>
        <th>Resturant Contact</th>
        <th>Food Name</th>
        <th>Food Quantity</th>
        <th>Start Time</th>
        <th>End Time</th>
        <th>Status</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ResturantName</td>
            <td>@item.ResturantAddress</td>
            <td>@item.ResturantContact</td>
            <td>@item.FoodName</td>
            <td>@item.FoodQuantity</td>
            <td>@item.StartTime</td>
            <td>@item.EndTime</td>
            <td>@item.Status</td>
            <td><button class="btn btn-block"><a href="/Employee/CollectFoodAction/@item.CollectReqId">Collect Food</a></button></td>
        </tr>
    }
</table>




